  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
          "FLASK_APP": "server/server",
          "FLASK_DEBUG": "1"
      },
      "args": [
          "run",
          "--no-debugger",
          "--port", "8000",
          // "--no-reload"
      ],
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "."
        }
      ],
      "justMyCode": true
    }
  ]
}
